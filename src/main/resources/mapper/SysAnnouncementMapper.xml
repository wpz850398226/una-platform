<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kunli.una.mapper.SysAnnouncementMapper">

    <resultMap type="cn.kunli.una.pojo.system.SysAnnouncement" id="BaseResultMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
    </resultMap>
    <!--实体类数据库字段-->
    <sql id="columnName" >
        id
        ,name
        ,company_id
        ,department_id
        ,is_wechat
        ,type
        ,company_type_dcode
        ,content
        ,remark
        ,creator_id
        ,create_time
        ,modifier_id
        ,modify_time
        ,is_delete
        ,
    </sql>

    <!--实体类传值语句-->
    <sql id="columnValue" >
        #{record.id}
        ,#{record.name}
        ,#{record.companyId}
        ,#{record.departmentId}
        ,#{record.isWechat}
        ,#{record.type}
        ,#{record.companyTypeDcode}
        ,#{record.content}
        ,#{record.remark}
        ,#{record.creatorId}
        ,#{record.createTime}
        ,#{record.modifierId}
        ,#{record.modifyTime}
        ,#{record.isDelete}

    </sql>


    <!--批量插入-->
    <insert id="batchInsert" parameterType="java.util.List">
        insert into sys_announcement
        (<include refid="columnName" />)values
        <foreach collection="recordList" item="record" separator=",">
            (<include refid="columnValue" />)
        </foreach>
    </insert>

    <!--置为已读-->
    <insert id="read">
        insert into sys_user_announcement
        (user_id,announcement_id)
        <choose>
            <when test="record.isAll !=null and record.isAll == 1">
                (select #{record.operatorId},id from sys_announcement as sanc
                where sanc.start_time &lt; NOW())
            </when>
            <otherwise>
                values (#{record.operatorId},#{record.id})
            </otherwise>
        </choose>

      </insert>
    <!--条件查询-->
    <select id="selectBySelective" resultMap="BaseResultMap">
        select record.*
        ,IF(suac.announcement_id IS NOT NULL,1,0) as isReaded
        from sys_announcement as record
        left join sys_user_announcement as suac on suac.announcement_id = record.id and suac.user_id = #{record.operatorId}
        <where>
            <include refid="cn.kunli.una.handler.BaseMapper.baseCondition" />
            <if test="record.keyword != null and record.keyword !=''">
                and (CONCAT_WS('|',record.name,sysAccount.name)) like '%${record.keyword}%'
            </if>
        </where>
        <include refid="cn.kunli.una.handler.BaseMapper.baseOrder" />
    </select>

</mapper>
