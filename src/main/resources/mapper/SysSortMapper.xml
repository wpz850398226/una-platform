<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kunli.una.mapper.SysSortMapper">
    <resultMap id="BaseResultMap" type="cn.kunli.una.pojo.system.SysSort">
        <id column="id" jdbcType="VARCHAR" property="id"/>
    </resultMap>
    <!--实体类数据库字段-->
    <sql id="columnName" >
        id
        ,name
        ,entity_id
        ,field_id
        ,sortord
        ,sequence
        ,remark
        ,creator_id
        ,create_time
        ,modifier_id
        ,modify_time
        ,is_delete
        ,
    </sql>

    <!--实体类传值语句-->
    <sql id="columnValue" >
        #{record.id}
        ,#{record.name}
        ,#{record.entityId}
        ,#{record.fieldId}
        ,#{record.sortord}
        ,#{record.sequence}
        ,#{record.remark}
        ,#{record.creatorId}
        ,#{record.createTime}
        ,#{record.modifierId}
        ,#{record.modifyTime}
        ,#{record.isDelete}

    </sql>


    <!--批量插入-->
    <insert id="batchInsert" parameterType="java.util.List">
        insert into sys_sort
        (<include refid="columnName" />)values
        <foreach collection="recordList" item="record" separator=",">
            (<include refid="columnValue" />)
        </foreach>
    </insert>
    <select id="selectBySelective" resultMap="BaseResultMap">
        select record.*
        ,sysField.name as fieldName
        ,sysField.dql_name as fieldDqlName
        ,sysEntity.name as entityName
        from sys_sort as record
        left join sys_field as sysField on sysField.id = record.field_id
        left join sys_entity as sysEntity on sysEntity.id = record.entity_id
        <where>
            <include refid="cn.kunli.una.handler.BasicMapper.baseCondition" />
            <if test="record.entityId!= null and record.entityId!= ''">
                and record.entity_id = #{record.entityId}
            </if>
            <if test="record.fieldId != null and record.fieldId != ''">
                and record.field_id = #{record.fieldId}
            </if>
            <if test="record.keyword != null and record.keyword !=''">
                and (CONCAT_WS('|',sysEntity.name,sysField.dql_name)) like '%${record.keyword}%'
            </if>
        </where>
        <include refid="cn.kunli.una.handler.BasicMapper.baseOrder" />
    </select>

    <select id="selectByEntityIdCollection" resultMap="BaseResultMap">
 	select record.*
        ,sysField.name as fieldName
        ,sysField.dql_name as fieldDqlName
        from sys_sort as record
        left join sys_field as sysField on sysField.id = record.field_id
        where record.entity_id = #{entityId} and record.is_delete = 0
        order by record.sequence
  </select>
</mapper>
