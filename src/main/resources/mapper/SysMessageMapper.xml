<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kunli.una.mapper.SysMessageMapper">

    <resultMap type="cn.kunli.una.pojo.system.SysMessage" id="BaseResultMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
    </resultMap>
    <!--实体类数据库字段-->
    <sql id="columnName" >
        id
        ,name
        ,type_dcode
        ,entity_id
        ,data_id
        ,content
        ,mobile
        ,captcha
        ,sign_name
        ,template_code
        ,file_id
        ,sequence
        ,is_send
        ,is_read
        ,is_artificial
        ,receiver_id
        ,send_time
        ,remark
        ,creator_id
        ,create_time
        ,modifier_id
        ,modify_time
        ,is_delete
        ,
    </sql>

    <!--实体类传值语句-->
    <sql id="columnValue" >
        #{record.id}
        ,#{record.name}
        ,#{record.typeDcode}
        ,#{record.entityId}
        ,#{record.dataId}
        ,#{record.content}
        ,#{record.mobile}
        ,#{record.captcha}
        ,#{record.signName}
        ,#{record.templateCode}
        ,#{record.fileId}
        ,#{record.sequence}
        ,#{record.isSend}
        ,#{record.isRead}
        ,#{record.isArtificial}
        ,#{record.receiverId}
        ,#{record.sendTime}
        ,#{record.remark}
        ,#{record.creatorId}
        ,#{record.createTime}
        ,#{record.modifierId}
        ,#{record.modifyTime}
        ,#{record.isDelete}

    </sql>


    <!--批量插入-->
    <insert id="batchInsert" parameterType="java.util.List">
        insert into sys_message
        (<include refid="columnName" />)values
        <foreach collection="recordList" item="record" separator=",">
            (<include refid="columnValue" />)
        </foreach>
    </insert>

    <!--条件查询-->
    <select id="selectBySelective" resultMap="BaseResultMap">
        select record.*

        from sys_message as record

        <where>
            <include refid="cn.kunli.una.handler.BaseMapper.baseCondition" />
            <if test="record.keyword != null and record.keyword !=''">
                and (CONCAT_WS('|',record.name,sysAccount.name)) like '%${record.keyword}%'
            </if>
        </where>
        <include refid="cn.kunli.una.handler.BaseMapper.baseOrder" />
    </select>

</mapper>
