<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kunli.una.mapper.SysUserMapper">

    <resultMap type="cn.kunli.una.pojo.system.SysUser" id="BaseResultMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
    </resultMap>

    <!--条件查询（返回封装类）-->
    <select id="selectBySelective" resultMap="BaseResultMap">
        select record.*
        from sys_user as record
        <where>
            <include refid="cn.kunli.una.handler.BaseMapper.baseCondition"/>
            <if test="record.keyword != null and record.keyword !=''">
                and (CONCAT_WS('|',record.title,sysUser.title)) like '%${record.keyword}%'
            </if>
        </where>
        <include refid="cn.kunli.una.handler.BaseMapper.baseOrder"/>
    </select>
</mapper>
